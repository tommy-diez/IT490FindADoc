<!-- Pricing -->

<section class="white-section" id="pricing">

    <h2 class="section-heading">A Doctor for all your needs</h2>

    <div class="row">

        <div class="pricing-column col-lg-4 col-md-6 justify-content-center">
            <div class="card">
                <div class="card-header">
                    <h3>Select One of These Doctors</h3>
                    <form method="POST" action="/">
                        <select name="specialization" id="spec">
                            <option value="1">Pediatrician</option>
                            <option value="2">Dermatology</option>
                            <option value="3">Cardiology</option>
                        </select>
                        <button name="postType" value="case3" type="submit">Find a Doc!</button>
                    </form>
                    <form method="POST" action="/">
                        <div class="mb-3">
                            <label class="form-label" for="email">Email Address:</label>
                            <input name="oldEmail" class="form-control" type="email" id="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email Address:</label>
                            <input name="newEmail" class="form-control" type="email" id="email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password :</label>
                            <input name="newPassword" class="form-control" type="password" id="password">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="policy">Insurance ID# :</label>
                            <select name="insuranceId" id="policy">
                                <option value="1">Test 123</option>
                                <option value="2">Demo 321</option>
                                <option value="15">Horizon NJ Health</option>
                            </select>
                        </div>
                        <button name="postType" value="case5" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>

